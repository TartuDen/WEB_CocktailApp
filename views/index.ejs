<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CoctailApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h1>Let's search something yummy to drink!</h1>
    </div>
    <div class="container">
        <form action="/search" method="post">
            <label for="coctail">Type the name of a cocktail here:</label>
            <input type="text" name="coctail" id="coctail">
            <button type="submit">Get it!</button>
        </form>
    </div>

    <!-- Start of card container -->
    <div class="container px-4 py-5" id="custom-cards">
        <div class="row row-cols-1 row-cols-lg-3 align-items-stretch g-4 py-5">
            <% if (data !== null) { %>
                <% Object.keys(data).forEach(category => { %>
                    <% data[category].forEach((drink, index) => { %>
                        <div class="col-lg-4">
                            <div class="card card-cover h-100 overflow-hidden text-bg-dark rounded-4 shadow-lg">
                                <img src="<%= drink.strDrinkThumb %>" class="card-img-top" alt="Drink Image">
                                <div class="d-flex flex-column h-100 p-5 pb-3 text-white text-shadow-1">
                                    <% const ingredients=[]; %>
                                    <% Object.keys(drink).forEach(property => { %>
                                        <% if (drink[property] !== null && property.startsWith('strIngredient')) { %>
                                            <% ingredients.push(drink[property]); %>
                                        <% } %>
                                    <% }) %>

                                    <% Object.keys(drink).forEach(property => { %>
                                        <% if (drink[property] !== null && property !== 'strDrinkThumb' && property !== "strCreativeCommonsConfirmed" && property !== "dateModified" && !property.includes('Measure') && !property.startsWith('strIngredient')) { %>
                                            <% const propertyName = property.replace(/^str/, ''); %>
                                            <% if (propertyName === 'Instructions' || propertyName === 'InstructionsDE' || propertyName === 'InstructionsIT' || propertyName === "InstructionsES") { %>
                                                <p class="pt-1 mt-1 mb-2 display-6 lh-1">
                                                    <button class="btn btn-info" type="button"
                                                        data-bs-toggle="collapse"
                                                        data-bs-target="#<%= propertyName %>Collapse<%= index %>"
                                                        aria-expanded="false"
                                                        aria-controls="<%= propertyName %>Collapse<%= index %>">
                                                        <%= propertyName %>
                                                    </button>
                                                    <div class="collapse" id="<%= propertyName %>Collapse<%= index %>">
                                                        <div class="card card-body">
                                                            <%= drink[property] %>
                                                        </div>
                                                    </div>
                                                </p>
                                            <% } else { %>
                                                <p class="pt-1 mt-1 mb-2 display-6 lh-1">
                                                    <strong><%= propertyName %></strong>: <%= drink[property] %>
                                                </p>
                                            <% } %>
                                        <% } %>
                                    <% }) %>
                                    <% ingredients.sort(); %>
                                    <% if (ingredients.length > 0) { %>
                                        <p class="pt-1 mt-1 mb-2 display-6 lh-1">
                                            <strong>Ingredients:</strong>
                                            <ul>
                                                <% ingredients.forEach((ingredient, index) => { %>
                                                    <li><%= index + 1 %>. <%= ingredient %></li>
                                                <% }) %>
                                            </ul>
                                        </p>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% }) %>
            <% } %>
        </div>
    </div>
    <!-- End of card container -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>
</html>
