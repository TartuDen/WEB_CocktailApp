<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CoctailApp</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <!-- Header Section -->
    <div class="container">
        <h1>Mix & Sip: Discover Delicious Cocktails</h1>
    </div>

    <!-- Search Form -->
    <div class="container">
        <form class="row g-3" action="/search" method="post">
            <!-- Input Field for Cocktail Name -->
            <div class="col-auto">
                <label for="coctail" class="visually-hidden">Type the name of a cocktail here:</label>
                <input type="text" class="form-control" id="coctail" name="coctail"
                    placeholder="Type the name of a cocktail here">
            </div>
            <!-- Select Dropdown for Category -->
            <div class="col-auto">
                <label for="category" class="visually-hidden">Select a category:</label>
                <select class="form-select" id="category" name="category">
                    <option value="/search.php?s=">cocktail name</option>
                    <option value="/filter.php?i=">type of alcohol</option>
                    <option value="/search.php?i=">look up ingredient</option>
                </select>
            </div>
            <!-- Submit Button -->
            <div class="col-auto">
                <button type="submit" class="btn btn-primary mb-3">Get it!</button>
            </div>
        </form>
    </div>

    <!-- Start of card container -->
    <div class="container px-4 py-5" id="custom-cards">
        <div class="row row-cols-1 row-cols-lg-3 align-items-stretch g-4 py-5">
            <% if (locals.err===null && locals.dataForClient["drinks"]!==null) { %>
                <!-- Loop through Drink Data -->
                <% Object.keys(dataForClient).forEach(category=> { %>
                    <% dataForClient[category].forEach((drink, index)=> { %>
                        <!-- Card Component for Each Drink -->
                        <div class="col-lg-4">
                            <div class="card card-cover h-100 overflow-hidden text-bg-dark rounded-4 shadow-lg">
                                <img src="<%= drink.strDrinkThumb %>" class="card-img-top" alt="Drink Image">
                                <div class="d-flex flex-column h-100 p-5 pb-3 text-white text-shadow-1">
                                    <!-- Ingredients Section -->
                                    <% const ingredients=[]; %>
                                        <% Object.keys(drink).forEach(property=> { %>
                                            <% if (drink[property] !==null && property.startsWith('strIngredient')) { %>
                                                <% ingredients.push(drink[property]); %>
                                                    <% } %>
                                                        <% }) %>
                                                            <!-- Properties Section -->
                                                            <% Object.keys(drink).forEach(property=> { %>
                                                                <% if (drink[property] !==null && property
                                                                    !=='strDrinkThumb' && property
                                                                    !=="strCreativeCommonsConfirmed" && property
                                                                    !=="dateModified" &&
                                                                    !property.startsWith('strIngredient') && property
                                                                    !=='strImageSource' && property
                                                                    !=='strImageAttribution' &&
                                                                    !property.includes("Measure")) { %>

                                                                    <% const propertyName=property.replace(/^str/, '' );
                                                                        %>
                                                                        <% if (propertyName==='Instructions' ||
                                                                            propertyName==='InstructionsDE' ||
                                                                            propertyName==='InstructionsIT' ||
                                                                            propertyName==="InstructionsES" ) { %>
                                                                            <!-- Instructions Section with Collapse -->
                                                                            <p class="pt-1 mt-1 mb-2 display-6 lh-1">
                                                                                <button class="btn btn-info"
                                                                                    type="button"
                                                                                    data-bs-toggle="collapse"
                                                                                    data-bs-target="#<%= propertyName %>Collapse<%= index %>"
                                                                                    aria-expanded="false"
                                                                                    aria-controls="<%= propertyName %>Collapse<%= index %>">
                                                                                    <%= propertyName %>
                                                                                </button>
                                                                            <div class="collapse"
                                                                                id="<%= propertyName %>Collapse<%= index %>">
                                                                                <div class="card card-body">
                                                                                    <%= drink[property] %>
                                                                                </div>
                                                                            </div>
                                                                            </p>
                                                                            <% } else if (propertyName==='Video' ) { %>
                                                                                <!-- Video Section -->
                                                                                <p
                                                                                    class="pt-1 mt-1 mb-2 display-6 lh-1">
                                                                                    <strong>
                                                                                        <%= propertyName %>
                                                                                    </strong>:
                                                                                    <a href="<%= drink[property] %>"
                                                                                        target="_blank">
                                                                                        <%= drink[property] %>
                                                                                    </a>
                                                                                </p>
                                                                                <% } else { %>
                                                                                    <!-- Other Property Section -->
                                                                                    <p
                                                                                        class="pt-1 mt-1 mb-2 display-6 lh-1">
                                                                                        <strong>
                                                                                            <%= propertyName %>
                                                                                        </strong>: <%= drink[property]
                                                                                            %>
                                                                                    </p>
                                                                                    <% } %>
                                                                                        <% } %>
                                                                                            <% }) %>
                                                                                                <!-- Ingredients List Section -->
                                                                                                <% if
                                                                                                    (ingredients.length>
                                                                                                    0) { %>
                                                                                                    <p
                                                                                                        class="pt-1 mt-1 mb-2 display-6 lh-1">
                                                                                                        <strong><em>Ingredients:</em></strong>
                                                                                                    <ul>
                                                                                                        <% ingredients.forEach((ingredient,
                                                                                                            index)=> {
                                                                                                            %>
                                                                                                            <li>
                                                                                                                <% index+
                                                                                                                    1 %>
                                                                                                                    <em>
                                                                                                                        <%= drink["strMeasure"+index]
                                                                                                                            %>
                                                                                                                            <%=
                                                                                                                                ingredient%>
                                                                                                                    </em>
                                                                                                            </li>
                                                                                                            <% }) %>
                                                                                                    </ul>
                                                                                                    </p>
                                                                                                    <% } %>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                            <% }) %>
                                <% } else { %>
                                    <!-- Error Message Section -->
                                    <div class="container">
                                        <h1>
                                            <%= err %>
                                        </h1>
                                    </div>
                                    <% } %>
        </div>
    </div>
    <!-- End of card container -->

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>